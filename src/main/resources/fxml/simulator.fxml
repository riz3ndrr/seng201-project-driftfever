      <ScrollPane fx:id="commentaryScrollPane" fitToWidth="true" GridPane.columnSpan="3" GridPane.rowIndex="2">
          <content>
              <VBox fx:id="commentaryVBox" alignment="TOP_LEFT" GridPane.rowIndex="2">
               <padding>
                  <Insets bottom="20.0" left="10.0" />
               </padding></VBox>
