             <Label fx:id="carReliabilityLabel" text="Reliability:">
               <font>
                  <Font size="26.0" />
               </font></Label>
             <Label fx:id="carUpgradesLabel" text="Upgrades:" wrapText="true" VBox.vgrow="ALWAYS">
